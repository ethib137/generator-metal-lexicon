{
	"name": "<%= repoName %>",
	"version": "0.0.0",
	"description": "<%= repoDescription %>",
	"license": "BSD",
	"repository": "<%= repoOwner %>/<%= repoName %>",
	"engines": {
		"node": ">=0.12.0",
		"npm": ">=3.0.0"
	},
	"main": "lib/<%= componentName %>.js",
	"jsnext:main": "src/<%= componentName %>.js",
	"files": [
		"lib",
		"src",
		"test"
	],
	"scripts": {
		"build": "gulp build",
		"compile": "babel --presets metal -d lib/ src/",<% if (templateLanguage === 'Soy') { %>
		"prepublish": "gulp soy && npm run compile",<% } else { %>
		"prepublish": "npm run compile",<% } %>
		"start": "http-server . -p 4000",
		"test": "gulp test",
		"watch": "gulp build:watch"
	},
	"keywords": [
		"lexicon, metal"
	],<% if (templateLanguage === 'JSX') { %>
	"babel": {
		"presets": ["metal", "metal-jsx"]
	},<% } %><% if (superClass === 'State') { %>
	"dependencies": {
		"metal-state": "^2.0.0"
	},<% } else if (superClass === 'Component') { %>
	"dependencies": {
		<% if (templateLanguage === 'Soy') { %>"metal-soy": "^2.0.0"<% } else if (templateLanguage === 'JSX') { %>,
		"metal-jsx": "^2.0.0"<% } else { %>,
		"metal-component": "^2.0.0"<% } %>
	},<% } else { %>
	"dependencies": {
		"metal": "^2.0.0"
	},<% } %>
	"devDependencies": {<% if (templateLanguage === 'JSX') { %>
		"babel-preset-metal-jsx": "^0.0.2",<% } %>
		"babel-cli": "^6.4.5",
		"babel-preset-metal": "^4.0.0",<% if (!defaultKarmaConfig) { %>
		"chai": "^2.3.0",<% } %>
		"gulp": "^3.8.11",
		"gulp-metal": "^1.0.0",
		"http-server": "^0.9.0",
		"lexicon-ux": "^1.0.0"<% if (!defaultKarmaConfig) { %>,
		"isparta": "^4.0.0"<% } %><% if (buildFormat === 'jquery') { %>,
		"jquery": "^2.2.0"<% } %><% if (!defaultKarmaConfig) { %>,
		"karma": "^0.13.9",
		"karma-babel-preprocessor": "^6.0.1",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^0.2.0",
		"karma-commonjs": "0.0.13",
		"karma-coverage": "^0.5.1",
		"karma-mocha": "^0.2.0",
		"karma-source-map-support": "1.0.0",
		"mocha": "^2.2.5"<% } %><% if (buildFormat === 'amd') { %>,
		"requirejs": "^2.1.0"<% } %>
	}
}
